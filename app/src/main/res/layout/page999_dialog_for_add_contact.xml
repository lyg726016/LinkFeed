<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/add_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:ems="10"
        android:gravity="top|center"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/add_contact_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_contact_phone_number"
        android:background="@android:color/white"
        android:ems="10"
        android:gravity="top|center"
        android:hint="GroupName"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="18dp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/add_contact_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_contact_name"
        android:background="@android:color/white"
        android:ems="10"
        android:gravity="center"
        android:hint="PhoneNumber"
        android:inputType="phone"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="18dp" />

    <CheckBox
        android:id="@+id/add_contact_favority_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_contact_group_name"
        android:layout_toLeftOf="@+id/add_contact_group_checkbox"
        android:layout_toStartOf="@+id/add_contact_group_checkbox"
        android:background="@android:color/white"
        android:text="친한 친구" />

    <CheckBox
        android:id="@+id/add_contact_group_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/add_contact_group_name"
        android:background="@android:color/white"
        android:text="그룹" />

</RelativeLayout>