<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/service_start_button" />

    <ImageButton
        android:id="@+id/notification_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/notification_comment"
        android:background="@android:color/white"
        android:padding="3dp"
        android:scaleType="centerInside"
        android:src="@drawable/service_close" />

    <ImageButton
        android:id="@+id/notification_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/service_start_button"
        android:layout_alignTop="@+id/notification_close"
        android:layout_toLeftOf="@+id/notification_close"
        android:layout_toStartOf="@+id/notification_close" />

    <ImageButton
        android:id="@+id/notification_start_app"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/notification_comment"
        android:layout_toLeftOf="@+id/notification_comment"
        android:layout_toStartOf="@+id/notification_comment"
        android:background="@android:color/white"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/notification_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/notification_start_app"
        android:layout_toLeftOf="@+id/notification_start_app"
        android:layout_toStartOf="@+id/notification_start_app"
        android:background="@android:color/white"
        android:scaleType="centerInside"
        android:src="@drawable/service_search_icon" />

    <ImageButton
        android:id="@+id/notification_comment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toLeftOf="@+id/notification_icon"
        android:layout_toStartOf="@+id/notification_icon"
        android:background="@android:color/white"
        android:padding="3dp"
        android:scaleType="centerInside"
        android:src="@drawable/service_view_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="@string/notification_copy"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>